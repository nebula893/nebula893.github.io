button.onclick = function() {
    if (ul.childNodes.length == 7) {
        for (var t = ul.childNodes.length - 1; t >= 3; t--) {
            console.log(t);
            ul.removeChild(ul.childNodes[t]);
        }
        ulcont.removeChild(ulcont.childNodes[3]);
        ulrisk.removeChild(ulrisk.childNodes[3]);
        ulsug.removeChild(ulsug.childNodes[3]);
    }
    for (var i in name1) {
        if (name1[i] == text111.value) {
            var li1 = document.createElement('li');
            li1.innerHTML = "公司名称：" + text111.value;
            var li2 = document.createElement('li');
            li2.innerHTML = "项目名称：" + projname[i];
            var li3 = document.createElement('li');
            li3.innerHTML = "所在国家和地区：" + country[i];
            var li4 = document.createElement('li');
            li4.innerHTML = "项目经营所属类别：" + category[i];
            var li5 = document.createElement('li');
            li5.innerHTML = "项目主要内容：" + content[i];
            var li6 = document.createElement('li');
            li6.innerHTML = "潜在风险：" + riskcontent[i];
            var li7 = document.createElement('li');
            li7.innerHTML = "解决方案：" + sugcontent[i];
            ul.appendChild(li1);
            ul.appendChild(li2);
            ul.appendChild(li3);
            ul.appendChild(li4);
            ulcont.appendChild(li5);
            ulrisk.appendChild(li6);
            ulsug.appendChild(li7);
            break;
        }
        if (i == 9 && name1[9] != text111.value) {
            var li = document.createElement('li');
            li.innerHTML = "无结果";
            ul.appendChild(li);
        }
    }
}